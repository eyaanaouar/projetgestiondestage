{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Entreprise{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-building me-2"></i>Tableau de bord Entreprise
                </h1>
                <a href="{{ path('app_entreprise_offre_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Nouvelle offre
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Statistiques -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{ offres|length }}</h4>
                            <p class="card-text">Offres publiées</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-briefcase fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">
                                {% set totalCandidatures = 0 %}
                                {% for offre in offres %}
                                    {% set totalCandidatures = totalCandidatures + offre.candidatures|length %}
                                {% endfor %}
                                {{ totalCandidatures }}
                            </h4>
                            <p class="card-text">Candidatures totales</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-paper-plane fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">{{ entreprise.nom }}</h4>
                            <p class="card-text">Votre entreprise</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des offres et Feedbacks -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2"></i>Vos offres de stage et retours
                    </h5>
                </div>
                <div class="card-body">
                    {% if offres|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                <tr>
                                    <th style="width: 25%">Offre</th>
                                    <th>Période</th>
                                    <th>Candidatures</th>
                                    <th>Statut</th>
                                    <th style="width: 40%">Retours des étudiants</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for offre in offres %}
                                    <tr>
                                        <td>
                                            <strong>{{ offre.titre }}</strong>
                                            {% if offre.lettreMotivationRequise %}

                                                <span class="badge bg-info small">Lettre requise</span>
                                            {% endif %}

                                            <small class="text-muted">Publiée le {{ offre.datePublication|date('d/m/Y') }}</small>
                                        </td>
                                        <td>
                                            <small>
                                                Du {{ offre.dateDebut|date('d/m/Y') }}

                                                au {{ offre.dateFin|date('d/m/Y') }}
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">{{ offre.candidatures|length }}</span>
                                        </td>
                                        <td>
                                            {% if offre.estValide %}
                                                <span class="badge bg-success">Validée</span>
                                            {% else %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <!-- SECTION FEEDBACKS -->
                                            {% set hasFeedbacks = false %}
                                            {% for candidature in offre.candidatures %}
                                                {% if candidature.feedback %}
                                                    {% set hasFeedbacks = true %}
                                                    <div class="mb-2 p-2 bg-light rounded border-start border-3 border-warning shadow-sm">
                                                        <div class="d-flex justify-content-between align-items-center small">
                                                            <strong>{{ candidature.etudiant.nom }} {{ candidature.etudiant.prenom }}</strong>
                                                            <span class="text-warning">
                                                                {% for i in 1..5 %}
                                                                    <i class="fa{{ i <= candidature.feedback.note ? 's' : 'r' }} fa-star"></i>
                                                                {% endfor %}
                                                            </span>
                                                        </div>
                                                        <p class="small mb-0 mt-1" style="font-style: italic;">"{{ candidature.feedback.commentaire }}"</p>
                                                        <small class="text-muted" style="font-size: 0.75rem;">Le {{ candidature.feedback.dateCreation|date('d/m/Y') }}</small>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}

                                            {% if not hasFeedbacks %}
                                                <span class="text-muted small">Aucun avis pour le moment.</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('app_entreprise_candidatures', {'id': offre.id}) }}"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Voir les candidatures">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_entreprise_offre_edit', {'id': offre.id}) }}"
                                                   class="btn btn-sm btn-outline-secondary"
                                                   title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune offre de stage pour le moment</h5>
                            <p class="text-muted">Commencez par créer votre première offre de stage.</p>
                            <a href="{{ path('app_entreprise_offre_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Créer une offre
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
