{% extends 'base.html.twig' %}

{% block title %}Laisser un feedback{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Votre avis sur le stage : {{ candidature.offre.titre }}</h3>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Entreprise : <strong>{{ candidature.offre.entreprise.nom }}</strong></p>

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.note) }}
                            {{ form_widget(form.note) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.commentaire) }}
                            {{ form_widget(form.commentaire) }}
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Envoyer mon feedback</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
